.w-full
  - if notice.present?
    %p#notice.py-2.px-3.bg-green-50.mb-5.text-green-500.font-medium.rounded-lg.inline-block= notice
  .flex.justify-between.items-center
    %h1.font-bold.text-4xl Projects
    = link_to 'New project', new_project_path, class: "bg-gray-900 text-white rounded-md px-3 py-2 text-sm font-medium"
  #projects.min-w-full.flex.gap-3.justify-center
    - @projects.each do |project|
      = link_to project_path(project), class: "block max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700" do
        %h5.mb-2.text-2xl.font-bold.tracking-tight.text-gray-900.dark:text-white
          = project.title
          %p.font-normal.text-gray-700.dark:text-gray-400
            = project.description
