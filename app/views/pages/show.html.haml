.mx-auto.w-full.flex{:class => "md:w-2/3"}
  .mx-auto
    - if notice.present?
      %p#notice.py-2.px-3.bg-green-50.mb-5.text-green-500.font-medium.rounded-lg.inline-block= notice
    = render @page
    = link_to 'Edit this page', edit_project_page_path(@project, @page), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium"
    .inline-block.ml-2
      = button_to 'Destroy this page', project_page_path(@project, @page), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium"
    = link_to 'Back to pages', project_pages_path(@project, @page), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium"
